@model Models.EF.Attribute

@{
    ViewBag.Title = "Cập nhật thuộc tính";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var values = ViewBag.AttributeValues as List<Models.EF.AttributeValue>;
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            Cập nhật: <span class="text-primary">@Model.Name</span>
        </h1>
        <div>
            <a href="@Url.Action("Index", "Attribute")" class="btn btn-sm btn-secondary shadow-sm mr-1">
                <i class="fas fa-arrow-left fa-sm text-white-50"></i> Quay lại
            </a>
            
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Thông tin chung</h6>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Edit", "Attribute", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.AttributeId)

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">Tên thuộc tính <span class="text-danger">*</span></label>
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @required = "required" })
                        </div>

                        <div class="form-group">
                            <label class="font-weight-bold">Mã (Code) <span class="text-danger">*</span></label>
                            @Html.TextBoxFor(model => model.Code, new { @class = "form-control", @required = "required" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">Loại hiển thị</label>
                            @{
                                var displayTypes = new List<SelectListItem>
                                                                {
                                    new SelectListItem { Text = "Nút bấm (Text/Số)", Value = "button" },
                                    new SelectListItem { Text = "Ô màu sắc (Color)", Value = "color" }
                                };
                            }
                            @Html.DropDownListFor(model => model.DisplayType, displayTypes, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label class="font-weight-bold">Thứ tự</label>
                            @Html.TextBoxFor(model => model.DisplayOrder, new { @class = "form-control", @type = "number" })
                        </div>

                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                @Html.CheckBoxFor(
                                    model => model.IsActive,
                                    new { @class = "custom-control-input", @id = "IsActive" }
                                )
                                <label class="custom-control-label" for="IsActive">Kích hoạt</label>
                            </div>

                            @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                        </div>

                    </div>
                </div>

                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fas fa-save mr-2"></i> Lưu thay đổi
                    </button>
                </div>
            }
        </div>
    </div>

    
</div>