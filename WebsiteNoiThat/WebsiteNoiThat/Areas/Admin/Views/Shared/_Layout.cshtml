    <link href="~/Content/admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <link href="~/Content/admin/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="~/Content/admin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
    <link href="~/Content/admin/css/admin-global.css" rel="stylesheet">

    <style>
        /* =========================================================
           PLANT THEME – XANH CÂY CẢNH SANG TRỌNG
           ========================================================= */
        :root {
            --green-dark: #1B5E20;
            --green-main: #2E7D32;
            --green-light: #66BB6A;
            --green-soft: #C8E6C9;
            --green-border: #DCEFE3;
            --bg-light: #F1F8F4;
        }

        body {
            background-color: var(--bg-light);
            color: #333;
        }

        /* SIDEBAR */
        .sidebar {
            background: linear-gradient(180deg, #2E7D32 10%, #1B5E20 100%) !important;
        }

            .sidebar .nav-item .nav-link {
                color: #E8F5E9 !important;
                font-weight: 500;
            }

                .sidebar .nav-item .nav-link:hover, .sidebar .nav-item.active .nav-link {
                    background-color: rgba(255,255,255,0.15);
                    color: #ffffff !important;
                    font-weight: 700;
                }

            .sidebar .sidebar-brand {
                background-color: rgba(0,0,0,0.1);
            }

        .sidebar-divider {
            border-top: 1px solid rgba(255,255,255,0.2) !important;
        }

        /* COLLAPSE MENU */
        .collapse-inner {
            background-color: #fff !important;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .collapse-item {
            color: var(--green-dark) !important;
            font-weight: 500;
        }

            .collapse-item:hover, .collapse-item.active {
                background-color: var(--green-soft) !important;
                color: var(--green-dark) !important;
                font-weight: 700;
            }

        /* TOPBAR */
        .topbar {
            background-color: #ffffff;
            border-bottom: 1px solid var(--green-border);
        }

            .topbar .nav-link {
                color: var(--green-dark);
            }

        /* BUTTONS */
        .btn-primary {
            background-color: var(--green-main);
            border-color: var(--green-main);
        }

            .btn-primary:hover {
                background-color: var(--green-dark);
                border-color: var(--green-dark);
            }

        .btn-success {
            background-color: var(--green-light);
            border-color: var(--green-light);
        }

            .btn-success:hover {
                background-color: #43A047;
                border-color: #43A047;
            }

        /* CARDS */
        .card {
            border-radius: 8px;
            border: none;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
        }

        .card-header {
            background-color: #fff;
            border-bottom: 1px solid #e3e6f0;
            color: var(--green-main);
            font-weight: 700;
        }

        /* SCROLL TOP */
        .scroll-to-top {
            background-color: var(--green-main);
        }

            .scroll-to-top:hover {
                background-color: var(--green-dark);
            }
    </style>
</head>

<body id="page-top">

    <div id="wrapper">
