    <script src="~/Content/admin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <script src="~/Content/admin/js/sb-admin-2.min.js"></script>

    <script src="~/Content/admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Content/admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/Content/admin/js/demo/datatables-demo.js"></script>

    <script>
        $(document).ready(function () {
            var currentUrl = window.location.pathname;

            // Tìm link nào trùng với URL hiện tại thì active nó và mở menu cha
            $('.collapse-item').each(function () {
                var href = $(this).attr('href');
                if (currentUrl.indexOf(href) !== -1) {
                    $(this).addClass('active');
                    $(this).closest('.collapse').addClass('show');
                    $(this).closest('.nav-item').addClass('active');
                }
            });

            // Active cho menu cấp 1 (không có con)
            $('.nav-item .nav-link').each(function () {
                var href = $(this).attr('href');
                if (href && currentUrl.indexOf(href) !== -1 && !$(this).hasClass('collapsed')) {
                    $(this).closest('.nav-item').addClass('active');
                }
            });
        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>