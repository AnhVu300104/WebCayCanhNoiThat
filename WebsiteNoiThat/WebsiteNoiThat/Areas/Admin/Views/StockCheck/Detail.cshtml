@model Models.EF.StockCheck
@{
    ViewBag.Title = "Chi tiết Phiếu Kiểm kê: " + Model.Code;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    Dictionary<int, Models.EF.ProductVariant> variantDetails = ViewBag.VariantDetails;
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-clipboard-check"></i> Chi tiết Phiếu Kiểm kê:
            <span class="text-primary">@Model.Code</span>
        </h1>
        <a href="@Url.Action("Index")" class="btn btn-sm btn-outline-secondary shadow-sm">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>

    <div class="row">
        <!-- Thông tin chung -->
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-primary">
                    <h6 class="m-0 font-weight-bold text-white">
                        <i class="fas fa-info-circle"></i> Thông tin chung
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td width="40%"><strong><i class="fas fa-warehouse"></i> Kho kiểm kê:</strong></td>
                                    <td>@Model.Warehouse.Name</td>
                                </tr>
                                <tr>
                                    <td><strong><i class="fas fa-calendar-alt"></i> Ngày kiểm kê:</strong></td>
                                    <td>@Model.CheckDate.ToString("dd/MM/yyyy")</td>
                                </tr>
                                <tr>
                                    <td><strong><i class="fas fa-user"></i> Người tạo:</strong></td>
                                    <td>@Model.UserCreated.Name</td>
                                </tr>
                                <tr>
                                    <td><strong><i class="fas fa-clock"></i> Thời gian tạo:</strong></td>
                                    <td>@(Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td width="40%"><strong><i class="fas fa-flag"></i> Trạng thái:</strong></td>
                                    <td>
                                        @{
                                            string statusClass = "";
                                            string statusIcon = "";
                                            string statusText = "";

                                            switch (Model.Status)
                                            {
                                                case "Approved":
                                                    statusClass = "badge-success";
                                                    statusIcon = "fa-check-circle";
                                                    statusText = "Đã duyệt";
                                                    break;
                                                case "Pending":
                                                    statusClass = "badge-warning";
                                                    statusIcon = "fa-clock";
                                                    statusText = "Chờ duyệt";
                                                    break;
                                                default:
                                                    statusClass = "badge-danger";
                                                    statusIcon = "fa-times-circle";
                                                    statusText = "Đã hủy";
                                                    break;
                                            }
                                        }
                                        <span class="badge @statusClass">
                                            <i class="fas @statusIcon"></i> @statusText
                                        </span>
                                    </td>
                                </tr>
                                @if (Model.CompletedAt.HasValue)
                                {
                                    <tr>
                                        <td><strong><i class="fas fa-check"></i> Thời gian duyệt:</strong></td>
                                        <td>@Model.CompletedAt.Value.ToString("dd/MM/yyyy HH:mm")</td>
                                    </tr>
                                }
                                <tr>
                                    <td><strong><i class="fas fa-sticky-note"></i> Ghi chú:</strong></td>
                                    <td>@(string.IsNullOrEmpty(Model.Note) ? "Không có" : Model.Note)</td>
                                </tr>
                            </table>

                            @if (Model.Status == "Pending")
                            {
                               
                                <div class="mt-3">
                                    <button class="btn btn-success btn-lg" onclick="approveCheck(@Model.CheckId)">
                                        <i class="fas fa-check-double"></i> Duyệt Phiếu Kiểm Kê
                                    </button>

                                    <button class="btn btn-danger btn-lg" onclick="cancelCheck(@Model.CheckId)">
                                        <i class="fas fa-times"></i> Hủy Phiếu Kiểm Kê
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Chi tiết kiểm kê -->
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-success">
                    <h6 class="m-0 font-weight-bold text-white">
                        <i class="fas fa-boxes"></i> Chi tiết kiểm kê
                        <span class="badge badge-light">@Model.StockCheckDetails.Count sản phẩm</span>
                    </h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th width="5%" class="text-center">STT</th>
                                    <th width="10%">Mã SP</th>
                                    <th width="25%">Tên Sản phẩm</th>
                                    <th width="12%">SKU</th>
                                    <th width="10%" class="text-center">SL Hệ thống</th>
                                    <th width="10%" class="text-center">SL Thực tế</th>
                                    <th width="10%" class="text-center">Chênh lệch</th>
                                    <th width="18%">Ghi chú</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int stt = 1;
                                    int totalSystemQty = 0;
                                    int totalActualQty = 0;
                                    int totalDifference = 0;
                                }
                                @foreach (var detail in Model.StockCheckDetails)
                                {
                                    var variant = variantDetails.ContainsKey(detail.VariantId) ? variantDetails[detail.VariantId] : null;

                                    totalSystemQty += detail.SystemQuantity;
                                    totalActualQty += detail.ActualQuantity;
                                    totalDifference += detail.Difference;

                                    <tr>
                                        <td class="text-center align-middle">@stt</td>
                                        <td class="align-middle">
                                            <span class="badge badge-secondary">@(variant?.Product?.ProductId ?? 0)</span>
                                        </td>
                                        <td class="align-middle">
                                            <strong>@(variant?.Product?.Name ?? "N/A")</strong>
                                        </td>
                                        <td class="align-middle">
                                            <code>@(variant?.SKU ?? "N/A")</code>
                                        </td>
                                        <td class="text-center align-middle">
                                            <span class="badge badge-info">@detail.SystemQuantity</span>
                                        </td>
                                        <td class="text-center align-middle">
                                            <span class="badge badge-primary">@detail.ActualQuantity</span>
                                        </td>
                                        <td class="text-center align-middle">
                                            @{
                                                string diffClass = detail.Difference > 0 ? "badge-success" :
                                                                  (detail.Difference < 0 ? "badge-danger" : "badge-secondary");
                                                string diffIcon = detail.Difference > 0 ? "fa-arrow-up" :
                                                                 (detail.Difference < 0 ? "fa-arrow-down" : "fa-equals");
                                                string diffText = detail.Difference > 0 ? "+" + detail.Difference : detail.Difference.ToString();
                                            }
                                            <span class="badge @diffClass">
                                                <i class="fas @diffIcon"></i> @diffText
                                            </span>
                                        </td>
                                        <td class="align-middle">
                                            <small class="text-muted">@(string.IsNullOrEmpty(detail.Note) ? "..." : detail.Note)</small>
                                        </td>
                                    </tr>
                                    stt++;
                                }
                            </tbody>
                            <tfoot class="thead-light">
                                <tr>
                                    <th colspan="4" class="text-right">TỔNG CỘNG:</th>
                                    <th class="text-center">
                                        <span class="badge badge-info">@totalSystemQty</span>
                                    </th>
                                    <th class="text-center">
                                        <span class="badge badge-primary">@totalActualQty</span>
                                    </th>
                                    <th class="text-center">
                                        @{
                                            string totalDiffClass = totalDifference > 0 ? "badge-success" :
                                                                   (totalDifference < 0 ? "badge-danger" : "badge-secondary");
                                            string totalDiffIcon = totalDifference > 0 ? "fa-arrow-up" :
                                                                  (totalDifference < 0 ? "fa-arrow-down" : "fa-equals");
                                            string totalDiffText = totalDifference > 0 ? "+" + totalDifference : totalDifference.ToString();
                                        }
                                        <span class="badge @totalDiffClass">
                                            <i class="fas @totalDiffIcon"></i> @totalDiffText
                                        </span>
                                    </th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    @if (totalDifference != 0)
                    {
                        <div class="alert alert-warning mt-3">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Chênh lệch:</strong>
                            Phát hiện chênh lệch <strong>@Math.Abs(totalDifference)</strong> sản phẩm
                            (@(totalDifference > 0 ? "thừa" : "thiếu"))
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success mt-3">
                            <i class="fas fa-check-circle"></i>
                            <strong>Khớp đúng:</strong> Số lượng thực tế khớp với hệ thống!
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        function cancelCheck(checkId) {
        if (confirm('Bạn có chắc chắn muốn HỦY phiếu kiểm kê này? Hành động này không thể hoàn tác.')) {
            $.ajax({
                url: '@Url.Action("Cancel", "StockCheck")',
                type: 'POST',
                data: { id: checkId },
                beforeSend: function() {
                    $('button').prop('disabled', true);
                },
                success: function(response) {
                    if (response.status) {
                        alert('✓ ' + response.message);
                        window.location.reload();
                    } else {
                        alert('✗ ' + response.message);
                        $('button').prop('disabled', false);
                    }
                },
                error: function(xhr, status, error) {
                    alert("Lỗi khi gửi yêu cầu hủy: " + error);
                    $('button').prop('disabled', false);
                }
            });
        }
    }
        function approveCheck(checkId) {
            if (confirm('Bạn có chắc chắn muốn DUYỆT phiếu kiểm kê này?\n\nHành động này sẽ:\n- Cập nhật tồn kho thực tế trong hệ thống\n- Không thể hoàn tác sau khi duyệt')) {
                $.ajax({
                    url: '@Url.Action("Approve", "StockCheck")',
                    type: 'POST',
                    data: { id: checkId },
                    beforeSend: function() {
                        $('button').prop('disabled', true);
                    },
                    success: function (response) {
                        if (response.status) {
                            alert('✓ ' + response.message);
                            window.location.reload();
                        } else {
                            alert('✗ ' + response.message);
                            $('button').prop('disabled', false);
                        }
                    },
                    error: function (xhr, status, error) {
                        alert("Lỗi khi gửi yêu cầu duyệt: " + error);
                        $('button').prop('disabled', false);
                    }
                });
            }
        }
    </script>
}

<style>
    .badge {
        font-size: 0.9rem;
        padding: 0.4em 0.6em;
    }

    code {
        color: #e83e8c;
        background-color: #f8f9fa;
        padding: 0.2rem 0.4rem;
        border-radius: 0.2rem;
    }
</style>