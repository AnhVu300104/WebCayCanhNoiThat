@model Models.EF.StockOut

@{
    ViewBag.Title = "Chi tiết phiếu xuất kho";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            Chi tiết phiếu xuất: <span class="text-primary">@Model.Code</span>
        </h1>
        <a href="@Url.Action("Index", "StockOut")" class="btn btn-sm btn-secondary shadow-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> Quay lại danh sách
        </a>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            @if (Model.Status == "pending")
            {
                <div class="alert alert-warning border-left-warning shadow-sm" role="alert">
                    <h5 class="alert-heading font-weight-bold"><i class="fas fa-clock"></i> PHIẾU ĐANG CHỜ DUYỆT</h5>
                    <p class="mb-0">Phiếu này chưa được duyệt. Tồn kho sản phẩm <b>chưa được trừ đi</b>.</p>
                </div>
            }
            else if (Model.Status == "approved")
            {
                <div class="alert alert-success border-left-success shadow-sm" role="alert">
                    <h5 class="alert-heading font-weight-bold"><i class="fas fa-check-circle"></i> ĐÃ XUẤT KHO</h5>
                    <p class="mb-0">Phiếu đã hoàn tất. Số lượng sản phẩm đã được trừ khỏi kho.</p>
                </div>
            }
            else if (Model.Status == "cancelled")
            {
                <div class="alert alert-danger border-left-danger shadow-sm" role="alert">
                    <h5 class="alert-heading font-weight-bold"><i class="fas fa-ban"></i> ĐÃ HỦY</h5>
                    <p class="mb-0">Phiếu xuất này đã bị hủy bỏ.</p>
                </div>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin chung</h6>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <td class="font-weight-bold text-gray-800" width="40%">Mã phiếu:</td>
                            <td>@Model.Code</td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold text-gray-800">Kho xuất:</td>
                            <td class="text-primary font-weight-bold">@(Model.Warehouse != null ? Model.Warehouse.Name : "N/A")</td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold text-gray-800">Loại xuất:</td>
                            <td>
                                @if (Model.Type == "Sale")
                                {<span>Xuất bán hàng</span> }
                                else if (Model.Type == "Transfer")
                                { <span>Chuyển kho</span> }
                                else if (Model.Type == "Damaged")
                                { <span>Xuất hủy/hỏng</span> }
                                else
                                { <span>@Model.Type</span>}
                            </td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold text-gray-800">Ngày tạo:</td>
                            <td>@string.Format("{0:dd/MM/yyyy HH:mm}", Model.CreatedAt)</td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold text-gray-800">Người tạo:</td>
                            <td>@(Model.UserCreated != null ? Model.UserCreated.Username : "Admin")</td>
                        </tr>
                        <tr>
                            <td class="font-weight-bold text-gray-800">Ghi chú:</td>
                            <td class="font-italic text-muted">@(string.IsNullOrEmpty(Model.Note) ? "Không có" : Model.Note)</td>
                        </tr>
                    </table>

                    @if (Model.Status == "pending")
                    {
                        <hr>
                        <div class="d-flex flex-column gap-2">
                            <button class="btn btn-success btn-block btn-lg mb-2" id="btn-approve" data-id="@Model.StockOutId">
                                <i class="fas fa-check"></i> DUYỆT & XUẤT KHO
                            </button>
                            <button class="btn btn-danger btn-block" id="btn-cancel" data-id="@Model.StockOutId">
                                <i class="fas fa-times"></i> Hủy phiếu
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-light d-flex justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Danh sách sản phẩm</h6>
                    <span class="badge badge-secondary">@(Model.StockOutDetails != null ? Model.StockOutDetails.Count : 0) mặt hàng</span>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped" width="100%" cellspacing="0">
                            <thead class="thead-dark">
                                <tr>
                                    <th width="5%">#</th>
                                    <th width="10%">Ảnh</th>
                                    <th width="40%">Sản phẩm / SKU</th>
                                    <th width="15%" class="text-center">SL Xuất</th>
                                    <th width="30%">Ghi chú</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.StockOutDetails != null && Model.StockOutDetails.Any())
                                {
                                    int i = 1;
                                    foreach (var item in Model.StockOutDetails)
                                    {
                                        <tr>
                                            <td class="text-center">@(i++)</td>
                                            <td class="text-center">
                                                @if (item.ProductVariant != null)
                                                {
                                                    <img src="/image/@(item.ProductVariant.ImageVariant ?? "no-image.png")"
                                                         style="width: 40px; height: 40px; object-fit: cover; border: 1px solid #ddd;"
                                                         onerror="this.src='/Content/images/no-image.png'" />
                                                }
                                            </td>
                                            <td>
                                                @if (item.ProductVariant != null)
                                                {
                                                    <div class="font-weight-bold text-primary">@item.ProductVariant.SKU</div>
                                                    <div class="small">@item.ProductVariant.Product.Name</div>

                                                    if (item.ProductVariant.VariantAttributeValues != null)
                                                    {
                                                        foreach (var attr in item.ProductVariant.VariantAttributeValues)
                                                        {
                                                            <span class="badge badge-info mr-1">@attr.Attribute.Name: @attr.AttributeValue.Value</span>
                                                        }
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-danger">Sản phẩm đã bị xóa</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <span class="badge badge-secondary" style="font-size: 1rem;">@item.Quantity</span>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Note))
                                                {
                                                    <div class="small font-italic">@item.Note</div>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center">Không có chi tiết sản phẩm</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // --- XỬ LÝ DUYỆT PHIẾU ---
            $('#btn-approve').click(function () {
                var id = $(this).data('id');

                if (confirm('CẢNH BÁO: Hành động này sẽ TRỪ số lượng trong tồn kho.\nBạn có chắc chắn muốn duyệt?')) {
                    var btn = $(this);
                    btn.html('<i class="fas fa-spinner fa-spin"></i> Đang xử lý...').prop('disabled', true);

                    $.ajax({
                        url: '/Admin/StockOut/Approve',
                        type: 'POST',
                        data: { id: id },
                        success: function (res) {
                            if (res.status) {
                                alert(res.message);
                                location.reload();
                            } else {
                                alert('Lỗi: ' + res.message);
                                btn.html('<i class="fas fa-check"></i> DUYỆT & XUẤT KHO').prop('disabled', false);
                            }
                        },
                        error: function () {
                            alert('Lỗi kết nối server.');
                            btn.html('<i class="fas fa-check"></i> DUYỆT & XUẤT KHO').prop('disabled', false);
                        }
                    });
                }
            });

            // --- XỬ LÝ HỦY PHIẾU ---
            $('#btn-cancel').click(function () {
                var id = $(this).data('id');
                if (confirm('Bạn có chắc chắn muốn HỦY phiếu này không?')) {
                    $.ajax({
                        url: '/Admin/StockOut/Cancel',
                        type: 'POST',
                        data: { id: id },
                        success: function (res) {
                            if (res.status) {
                                alert(res.message);
                                location.reload();
                            } else {
                                alert('Lỗi: ' + res.message);
                            }
                        },
                        error: function () {
                            alert('Lỗi kết nối server.');
                        }
                    });
                }
            });
        });
    </script>
}