@model IEnumerable<Models.EF.Category>

@{
    ViewBag.Title = "Danh sách loại sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Danh sách Loại sản phẩm</h1>
        <a href="@Url.Action("Add", "ProductCate")" class="btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Thêm loại sản phẩm
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table id="example" class="table table-striped table-bordered table-hover" style="width:100%">
                    <thead class="thead-light">
                        <tr>
                            <th width="80">ID</th>
                            <th>Tên loại sản phẩm</th>
                            <th>Meta Title</th>
                            <th width="100">Mã cha (ParId)</th>
                            <th width="100">Trạng thái</th>
                            <th width="120">Hành động</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr class="Search">
                                    <td class="text-center align-middle">@item.CategoryId</td>
                                    <td class="align-middle font-weight-bold text-primary">@item.Name</td>
                                    <td class="align-middle">@item.MetaTitle</td>
                                    <td class="text-center align-middle">@(item.ParId ?? 0)</td>
                                    <td class="text-center align-middle">
                                        @if (item.IsActive)
                                        {
                                            <span class="badge badge-success">
                                                <i class="fas fa-check-circle"></i> Kích hoạt
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">
                                                <i class="fas fa-times-circle"></i> Tắt
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center align-middle">
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("Edit", "ProductCate", new { CategoryId = item.CategoryId })"
                                               class="btn btn-sm btn-warning" title="Sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>

                                            @*<a href="@Url.Action("Delete", "ProductCate", new { id = item.CategoryId })"
                                               class="btn btn-sm btn-danger ml-1"
                                               onclick="return confirm('Bạn có chắc chắn muốn xóa danh mục @item.Name này không?');"
                                               title="Xóa">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>*@
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Content/admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Content/admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            // Khởi tạo DataTables
            $('#example').DataTable({
                "language": {
                    "lengthMenu": "Hiện _MENU_ dòng",
                    "zeroRecords": "Không tìm thấy dữ liệu",
                    "info": "Trang _PAGE_ / _PAGES_",
                    "infoEmpty": "Không có dữ liệu",
                    "infoFiltered": "(lọc từ _MAX_ dòng)",
                    "search": "Tìm kiếm:",
                    "paginate": {
                        "first": "Đầu",
                        "last": "Cuối",
                        "next": "Sau",
                        "previous": "Trước"
                    }
                },
                "columnDefs": [
                    { "orderable": false, "targets": 5 } // Ngăn cột Hành động sắp xếp
                ],
                "order": [[0, "desc"]] // Sắp xếp theo ID giảm dần
            });
        });
    </script>
}