@model Models.EF.Category

@{
    ViewBag.Title = "Thêm danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Thêm danh mục sản phẩm</h1>

    <div class="card shadow">
        <div class="card-body">
            @using (Html.BeginForm("Add", "ProductCate", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(m => m.Name)
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.MetaTitle)
                    @Html.TextBoxFor(m => m.MetaTitle, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.ParId, "Danh mục cha")
                    @Html.TextBoxFor(
                        m => m.ParId,
                        new
                            {
                                @class = "form-control",
                            type = "number",
                            min = "0",
                            step = "1",
                            oninput = "this.value=this.value.replace(/[^0-9]/g,'');"
                        }
                    )
                </div>


                <div class="form-group">
                    <div class="custom-control custom-switch">
                        @Html.CheckBoxFor(m => m.IsActive, new { @class = "custom-control-input", id = "isActiveSwitch" })
                        <label class="custom-control-label" for="isActiveSwitch">
                            Kích hoạt danh mục
                        </label>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Lưu
                    </button>
                    <a href="@Url.Action("Show", "ProductCate")" class="btn btn-secondary ml-2">
                        Quay lại
                    </a>
                </div>
            }
        </div>
    </div>
</div>
