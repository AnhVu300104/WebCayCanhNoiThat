@model Models.EF.News
@{
    ViewBag.Title = "Chỉnh sửa tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    .edit-news-container {
        max-width: 900px;
        margin: 30px auto;
        padding: 0 20px;
    }

    .page-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 30px;
        border-radius: 10px 10px 0 0;
        margin-bottom: 0;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .page-header h2 {
        margin: 0;
        font-size: 28px;
        font-weight: 600;
    }

    .page-header .news-id {
        font-size: 14px;
        opacity: 0.9;
        margin-top: 5px;
    }

    .form-wrapper {
        background: white;
        padding: 40px;
        border-radius: 0 0 10px 10px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }

    .form-horizontal .form-group {
        margin-bottom: 25px;
        display: flex;
        align-items: flex-start;
    }

    .control-label {
        font-weight: 600;
        color: #333;
        padding-top: 10px;
        font-size: 14px;
        min-width: 150px;
        text-align: right;
        padding-right: 20px;
    }

    .control-label::after {
        content: " *";
        color: #dc3545;
    }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e0e0e0;
        border-radius: 6px;
        font-size: 14px;
        transition: all 0.3s;
        box-sizing: border-box;
    }

    .form-control:focus {
        border-color: #667eea;
        outline: none;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    textarea.form-control {
        resize: vertical;
        min-height: 120px;
        font-family: inherit;
    }

    .input-wrapper {
        flex: 1;
        max-width: 600px;
    }

    .text-danger {
        color: #dc3545;
        font-size: 13px;
        margin-top: 5px;
        display: block;
    }

    /* Image section */
    .image-section {
        display: flex;
        gap: 20px;
        align-items: flex-start;
    }

    .current-image {
        flex-shrink: 0;
    }

    .current-image-label {
        font-size: 13px;
        color: #666;
        margin-bottom: 8px;
        display: block;
        font-weight: 600;
    }

    .current-image img {
        width: 200px;
        height: 200px;
        object-fit: cover;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        border: 3px solid #f0f0f0;
    }

    .image-upload-section {
        flex: 1;
    }

    /* File upload styling */
    .file-upload-wrapper {
        position: relative;
        overflow: hidden;
        display: inline-block;
        width: 100%;
    }

    .file-upload-input {
        position: absolute;
        font-size: 100px;
        opacity: 0;
        right: 0;
        top: 0;
        cursor: pointer;
    }

    .file-upload-label {
        display: inline-block;
        padding: 12px 25px;
        background: #f8f9fa;
        border: 2px dashed #667eea;
        border-radius: 6px;
        cursor: pointer;
        transition: all 0.3s;
        width: 100%;
        text-align: center;
        color: #667eea;
        font-weight: 500;
    }

    .file-upload-label:hover {
        background: #667eea;
        color: white;
        border-style: solid;
    }

    .file-upload-label i {
        margin-right: 8px;
    }

    .file-name {
        margin-top: 10px;
        color: #28a745;
        font-size: 13px;
        font-weight: 500;
    }

    .image-note {
        font-size: 12px;
        color: #999;
        margin-top: 8px;
        font-style: italic;
    }

    /* New image preview */
    .new-image-preview {
        margin-top: 15px;
        display: none;
    }

    .new-image-preview-label {
        font-size: 13px;
        color: #28a745;
        margin-bottom: 8px;
        display: block;
        font-weight: 600;
    }

    .new-image-preview img {
        max-width: 200px;
        max-height: 200px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        object-fit: cover;
        border: 3px solid #28a745;
    }

    /* Button styling */
    .btn-group {
        display: flex;
        gap: 15px;
        margin-top: 35px;
        padding-top: 25px;
        border-top: 2px solid #f0f0f0;
        justify-content: flex-end;
    }

    .btn-submit {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 12px 40px;
        border: none;
        border-radius: 6px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    }

    .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
    }

    .btn-back {
        background: #6c757d;
        color: white;
        padding: 12px 30px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s;
        display: inline-block;
    }

    .btn-back:hover {
        background: #5a6268;
        color: white;
        text-decoration: none;
        transform: translateY(-2px);
    }

    /* Validation summary */
    .validation-summary-errors {
        background: #fff3cd;
        border-left: 4px solid #ffc107;
        padding: 15px 20px;
        border-radius: 6px;
        margin-bottom: 25px;
    }

    .validation-summary-errors ul {
        margin: 0;
        padding-left: 20px;
    }

    .validation-summary-errors li {
        color: #856404;
        margin-bottom: 5px;
    }

    /* Hidden field display */
    .hidden-info {
        background: #e7f3ff;
        padding: 12px 15px;
        border-radius: 6px;
        border-left: 4px solid #2196F3;
        margin-bottom: 20px;
    }

    .hidden-info strong {
        color: #2196F3;
        margin-right: 10px;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .form-horizontal .form-group {
            flex-direction: column;
        }

        .control-label {
            text-align: left;
            padding-right: 0;
            margin-bottom: 8px;
            min-width: auto;
        }

        .input-wrapper {
            max-width: 100%;
        }

        .image-section {
            flex-direction: column;
        }

        .current-image img {
            width: 100%;
            max-width: 300px;
        }

        .btn-group {
            flex-direction: column;
        }

        .btn-submit, .btn-back {
            width: 100%;
            text-align: center;
        }
    }

    /* Loading state */
    .btn-submit:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }
</style>

<div class="edit-news-container">
    <div class="page-header">
        <h2><i class="fa fa-edit"></i> Chỉnh sửa tin tức</h2>
        <div class="news-id">Mã tin tức: <strong>@Model.NewsId</strong></div>
    </div>

    <div class="form-wrapper">
        @using (Html.BeginForm("Edit", "Newss", FormMethod.Post, new { enctype = "multipart/form-data", id = "editNewsForm" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger validation-summary-errors" })
            @Html.HiddenFor(model => model.NewsId)

            <div class="form-horizontal">
                <!-- Tiêu đề -->
                <div class="form-group">
                    @Html.LabelFor(model => model.Title, "Tiêu đề", htmlAttributes: new { @class = "control-label" })
                    <div class="input-wrapper">
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @required = "required", @placeholder = "Nhập tiêu đề tin tức" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Nội dung chi tiết -->
                <div class="form-group">
                    @Html.LabelFor(model => model.Detail, "Nội dung chi tiết", htmlAttributes: new { @class = "control-label" })
                    <div class="input-wrapper">
                        @Html.TextAreaFor(model => model.Detail, new { @class = "form-control", rows = "6", @required = "required", @placeholder = "Nhập nội dung chi tiết của tin tức..." })
                        @Html.ValidationMessageFor(model => model.Detail, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Hình ảnh -->
                <div class="form-group">
                    <label class="control-label">Hình ảnh</label>
                    <div class="input-wrapper">
                        <div class="image-section">
                            <!-- Hình ảnh hiện tại -->
                            <div class="current-image">
                                <span class="current-image-label">Hình ảnh hiện tại:</span>
                                <img src="@Url.Content("~/image/" + Model.Photo)" alt="@Model.Title" id="current-img" />
                            </div>

                            <!-- Upload hình ảnh mới -->
                            <div class="image-upload-section">
                                @Html.HiddenFor(model => model.Photo)
                                <div class="file-upload-wrapper">
                                    <label for="UploadImage" class="file-upload-label">
                                        <i class="fa fa-cloud-upload"></i>
                                        <span id="file-label-text">Thay đổi hình ảnh</span>
                                    </label>
                                    <input type="file" id="UploadImage" name="UploadImage" class="file-upload-input" accept="image/*" />
                                </div>
                                <div class="file-name" id="file-name" style="display: none;"></div>
                                <div class="image-note">* Để trống nếu không muốn thay đổi hình ảnh</div>

                                <!-- Preview hình ảnh mới -->
                                <div class="new-image-preview" id="new-image-preview">
                                    <span class="new-image-preview-label">Hình ảnh mới:</span>
                                    <img id="preview-img" src="" alt="Preview" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Ngày cập nhật -->
                <div class="form-group">
                    @Html.LabelFor(model => model.DateUpdate, "Ngày cập nhật", htmlAttributes: new { @class = "control-label" })
                    <div class="input-wrapper">
                        @Html.TextBoxFor(m => m.DateUpdate, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.DateUpdate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- Buttons -->
                <div class="btn-group">
                    @Html.ActionLink("Quay lại danh sách", "Show", null, new { @class = "btn-back" })
                    <button type="submit" class="btn-submit" id="submitBtn">
                        <i class="fa fa-save"></i> Lưu thay đổi
                    </button>
                </div>
            </div>
        }
    </div>
</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        // Xử lý preview hình ảnh mới
        $('#UploadImage').change(function () {
            var file = this.files[0];
            if (file) {
                // Kiểm tra định dạng file
                var allowedTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif'];
                if (!allowedTypes.includes(file.type)) {
                    alert('Chỉ chấp nhận file ảnh định dạng JPG, PNG hoặc GIF!');
                    $(this).val('');
                    return;
                }

                // Kiểm tra kích thước file (max 5MB)
                if (file.size > 5 * 1024 * 1024) {
                    alert('Kích thước file không được vượt quá 5MB!');
                    $(this).val('');
                    return;
                }

                // Hiển thị tên file
                $('#file-name').text('Đã chọn: ' + file.name).show();
                $('#file-label-text').text('Thay đổi hình ảnh khác');

                // Preview hình ảnh mới
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#preview-img').attr('src', e.target.result);
                    $('#new-image-preview').fadeIn();
                };
                reader.readAsDataURL(file);
            } else {
                $('#file-name').hide();
                $('#new-image-preview').hide();
                $('#file-label-text').text('Thay đổi hình ảnh');
            }
        });

        // Validation khi submit
        $('#editNewsForm').submit(function (e) {
            var isValid = true;
            var errorMessage = '';

            // Kiểm tra tiêu đề
            var title = $('input[name="Title"]').val().trim();
            if (title === '') {
                isValid = false;
                errorMessage += '- Vui lòng nhập tiêu đề\n';
            }

            // Kiểm tra nội dung
            var detail = $('textarea[name="Detail"]').val().trim();
            if (detail === '') {
                isValid = false;
                errorMessage += '- Vui lòng nhập nội dung chi tiết\n';
            }

            // Kiểm tra ngày
            var date = $('input[name="DateUpdate"]').val();
            if (date === '') {
                isValid = false;
                errorMessage += '- Vui lòng chọn ngày cập nhật\n';
            }

            // Kiểm tra file nếu có chọn
            var file = $('#UploadImage')[0].files[0];
            if (file) {
                var allowedTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif'];
                if (!allowedTypes.includes(file.type)) {
                    isValid = false;
                    errorMessage += '- Chỉ chấp nhận file ảnh (JPG, PNG, GIF)\n';
                }
                if (file.size > 5 * 1024 * 1024) {
                    isValid = false;
                    errorMessage += '- Kích thước file không được vượt quá 5MB\n';
                }
            }

            if (!isValid) {
                e.preventDefault();
                alert('Vui lòng kiểm tra lại thông tin:\n\n' + errorMessage);
                return false;
            }

            // Confirm trước khi lưu
            if (!confirm('Bạn có chắc chắn muốn lưu các thay đổi?')) {
                e.preventDefault();
                return false;
            }

            // Disable button để tránh submit nhiều lần
            $('#submitBtn').prop('disabled', true).html('<i class="fa fa-spinner fa-spin"></i> Đang lưu...');
        });
    });
</script>