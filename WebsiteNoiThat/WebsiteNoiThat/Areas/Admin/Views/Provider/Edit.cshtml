@model Models.EF.Provider

@{
    ViewBag.Title = "Chỉnh sửa nhà cung cấp";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Chỉnh sửa nhà cung cấp</h2>

@using (Html.BeginForm("Edit", "Provider", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <h5 class="mb-3 text-primary">Thông tin nhà cung cấp</h5>
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ProviderId)

            <!-- Tên nhà cung cấp -->
            <div class="form-group row">
                @Html.LabelFor(model => model.Name, "Tên nhà cung cấp", new { @class = "col-md-3 col-form-label font-weight-bold" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Name,
                        new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên nhà cung cấp", required = "required" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Địa chỉ -->
            <div class="form-group row">
                @Html.LabelFor(model => model.Address, "Địa chỉ", new { @class = "col-md-3 col-form-label font-weight-bold" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Address,
                        new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập địa chỉ", required = "required" } })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Số điện thoại -->
            <div class="form-group row">
                @Html.LabelFor(model => model.Phone, "Số điện thoại", new { @class = "col-md-3 col-form-label font-weight-bold" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Phone,
                        new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập số điện thoại", required = "required" } })
                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Trạng thái hoạt động (ẩn, nhưng có thể chỉnh sửa nếu muốn) -->
            <div class="form-group row">
                <div class="col-md-9 offset-md-3">
                    <div class="form-check">
                        @Html.CheckBoxFor(model => model.IsActive, new { @class = "form-check-input", id = "IsActive" })
                        <label class="form-check-label" for="IsActive">Kích hoạt</label>
                    </div>
                </div>
            </div>

            <!-- Nút -->
            <div class="form-group row mt-4">
                <div class="col-md-9 offset-md-3">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fas fa-save"></i> Lưu thay đổi
                    </button>
                    <a href="@Url.Action("Show", "Provider")" class="btn btn-secondary ml-2">
                        Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </div>
}
