@model IEnumerable<Models.EF.Provider>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center text-primary font-weight-bold mt-4 mb-4">Danh sách nhà cung cấp</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

<p>
    <a href="@Url.Action("Add", "Provider")" class="btn btn-primary mb-3">
        <i class="fas fa-plus"></i> Thêm nhà cung cấp
    </a>
</p>

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table id="example" class="table table-striped table-bordered table-hover" style="width:100%">
                <thead class="thead-light">
                    <tr>
                        <th>Mã nhà cung cấp</th>
                        <th>Tên nhà cung cấp</th>
                        <th>Địa chỉ</th>
                        <th>Số điện thoại</th>
                        <th>Trạng thái</th>
                        <th class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ProviderId</td>
                            <td>@item.Name</td>
                            <td>@item.Address</td>
                            <td>@item.Phone</td>
                            <td>
                                @if (item.IsActive == true)
                                {
                                    <span class="badge badge-success">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Ngừng hoạt động</span>
                                }
                            </td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-primary"
                                        onclick="location.href='@Url.Action("Edit","Provider",new { ProviderId=item.ProviderId })'">
                                    <i class="fas fa-edit"></i> Sửa
                                </button>
                                @*<button class="btn btn-sm btn-danger btn-delete"
                                        data-id="@item.ProviderId"
                                        data-name="@item.Name">
                                    <i class="fas fa-trash"></i> Xóa
                                </button>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- MODAL XÁC NHẬN XÓA -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fas fa-exclamation-triangle"></i> Xác nhận xóa</h5>
                <button type="button" class="close text-white" data-dismiss="modal"><span>&times;</span></button>
            </div>
            <div class="modal-body text-center">
                <p>Bạn có chắc chắn muốn xóa nhà cung cấp:</p>
                <h5 class="text-danger font-weight-bold" id="providerName"></h5>
                <p class="text-muted">Hành động này không thể hoàn tác.</p>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                <a href="#" class="btn btn-danger" id="confirmDelete">Xóa</a>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Content/DataTable/js/jquery.dataTables.min.js"></script>
<script src="~/Content/DataTable/js/dataTables.bootstrap.min.js"></script>

<script>
    $('#example').DataTable({
        language: {
            search: "Tìm kiếm:",
            lengthMenu: "Hiển thị _MENU_ dòng",
            info: "Hiển thị _START_ đến _END_ của _TOTAL_ nhà cung cấp",
            infoEmpty: "Không có dữ liệu",
            infoFiltered: "(lọc từ _MAX_ dòng)",
            zeroRecords: "Không tìm thấy dữ liệu phù hợp",
            paginate: { first: "Trang đầu", last: "Trang cuối", next: "Sau", previous: "Trước" }
        }
    });

    $(document).on("click", ".btn-delete", function () {
        var id = $(this).data("id");
        var name = $(this).data("name");

        $("#providerName").text(name);
        $("#confirmDelete").attr("href", "/Admin/Provider/Delete?ProviderId=" + id);

        $("#deleteModal").modal("show");
    });
</script>
