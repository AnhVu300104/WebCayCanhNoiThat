@model IEnumerable<WebsiteNoiThat.Models.OrderViewModel>

@{
    ViewBag.Title = "Báo cáo doanh thu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>📊 Báo cáo doanh thu - Thống kê</h2>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.1/css/bootstrap.css">
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.5.2/css/buttons.bootstrap4.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.bootstrap4.min.css">

<script src="https://code.jquery.com/jquery-3.3.1.js"></script>

<!-- HIỂN THỊ THÔNG BÁO LỖI -->
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>⚠️ Lỗi!</strong> @TempData["Error"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<!-- CẢNH BÁO QUAN TRỌNG -->
<div class="alert alert-info mb-4">
    <strong>📌 Lưu ý quan trọng:</strong>
    <ul class="mb-0 mt-2">
        <li><strong>Doanh thu CHỈ tính từ đơn hàng có trạng thái: <span class="badge badge-success">4 - Đã giao hàng</span></strong></li>
        <li>Các đơn hàng ở trạng thái khác vẫn hiển thị để theo dõi nhưng <strong>KHÔNG</strong> tính vào doanh thu</li>
    </ul>
</div>

<!-- THỐNG KÊ DOANH THU (CHỈ ĐƠN ĐÃ GIAO) -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">💰 Tổng doanh thu (Đã giao)</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalRevenue.ToString("N0")₫</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">📦 Đơn đã giao</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.DeliveredCount đơn</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-shopping-cart fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">📊 Sản phẩm đã bán</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.DeliveredProducts sản phẩm</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-box fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- THỐNG KÊ THEO TRẠNG THÁI -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">📋 Thống kê theo trạng thái đơn hàng</h6>
    </div>
    <div class="card-body">
        <div class="row">
            @{
                // Tính toán thống kê trực tiếp từ Model
                var statusGroups = Model
                    .GroupBy(x => new { x.OrderId, x.StatusId, x.StatusName })
                    .Select(g => new { g.Key.OrderId, g.Key.StatusId, g.Key.StatusName })
                    .GroupBy(x => new { x.StatusId, x.StatusName })
                    .Select(g => new
                    {
                        StatusId = g.Key.StatusId ?? 0,
                        StatusName = g.Key.StatusName ?? "Không xác định",
                        Count = g.Count()
                    })
                    .OrderBy(x => x.StatusId)
                    .ToList();

                foreach (var stat in statusGroups)
                {
                    var badgeClass = "";
                    switch (stat.StatusId)
                    {
                        case 1: badgeClass = "badge-secondary"; break;
                        case 2: badgeClass = "badge-info"; break;
                        case 3: badgeClass = "badge-warning"; break;
                        case 4: badgeClass = "badge-success"; break;
                        case 5: badgeClass = "badge-danger"; break;
                    }
                    <div class="col-md-2 mb-3">
                        <div class="card border-left-secondary shadow h-100">
                            <div class="card-body text-center">
                                <span class="badge @badgeClass mb-2">@stat.StatusName</span>
                                <h4 class="font-weight-bold">@stat.Count</h4>
                                <small class="text-muted">đơn hàng</small>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

<!-- BỘ LỌC THỜI GIAN -->
@using (Html.BeginForm("Viewmodel", "Order", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">🔍 Lọc theo thời gian</h6>
        </div>
        <div class="card-body">
            <div class="form-row align-items-end">
                <div class="col-md-4">
                    <label><strong>Từ ngày <span class="text-danger">*</span></strong></label>
                    <input type="date" class="form-control" id="dfr" name="dfr" required
                           value="@ViewBag.FromDate" max="@DateTime.Now.ToString("yyyy-MM-dd")">
                    <small class="text-muted">Bắt buộc nhập</small>
                </div>
                <div class="col-md-4">
                    <label><strong>Đến ngày <span class="text-danger">*</span></strong></label>
                    <input type="date" class="form-control" id="dto" name="dto" required
                           value="@ViewBag.ToDate" max="@DateTime.Now.ToString("yyyy-MM-dd")">
                    <small class="text-muted">Phải lớn hơn hoặc bằng ngày bắt đầu</small>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary btn-block">
                        <i class="fas fa-search"></i> Xem báo cáo
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- BẢNG CHI TIẾT TẤT CẢ ĐƠN HÀNG -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">📋 Chi tiết tất cả đơn hàng</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="example" class="table table-striped table-bordered table-hover" style="width:100%">
                    <thead>
                        <tr>
                            <th>Mã đơn</th>
                            <th>Tên sản phẩm</th>
                            <th>Số lượng</th>
                            <th>Đơn giá</th>
                            <th>Thành tiền</th>
                            <th>Khách hàng</th>
                            <th>SĐT</th>
                            <th>Địa chỉ</th>
                            <th>Ngày</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var rowClass = item.StatusId == 4 ? "table-success" : ""; // Đánh dấu đơn đã giao
                            var badgeClass = "";
                            switch (item.StatusId)
                            {
                                case 1: badgeClass = "badge-secondary"; break;
                                case 2: badgeClass = "badge-info"; break;
                                case 3: badgeClass = "badge-warning"; break;
                                case 4: badgeClass = "badge-success"; break;
                                case 5: badgeClass = "badge-danger"; break;
                            }
                            <tr class="@rowClass">
                                <td>@item.OrderId</td>
                                <td>@item.ProductName</td>
                                <td class="text-center">@item.Quantity</td>
                                <td class="text-right">@item.Price₫</td>
                                <td class="text-right">
                                    @if (item.StatusId == 4)
                                    {
                                        <strong class="text-success">@((item.Quantity * item.Price))₫</strong>
                                    }
                                    else
                                    {
                                        <span class="text-muted">@((item.Quantity * item.Price))₫</span>
                                    }
                                </td>
                                <td>@item.ShipName</td>
                                <td>@item.ShipPhone</td>
                                <td>@item.ShipAddress</td>
                                <td>@item.UpdateDate</td>
                                <td>
                                    <span class="badge @badgeClass">@item.StatusName</span>
                                    @if (item.StatusId == 4)
                                    {
                                        <small class="text-success d-block">✅ Tính doanh thu</small>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-success">
                            <th colspan="4" class="text-right">
                                <strong>💰 TỔNG DOANH THU (Chỉ đơn đã giao):</strong>
                            </th>
                            <th class="text-right">
                                <strong class="text-success">@ViewBag.TotalRevenue.ToString("N0")₫</strong>
                            </th>
                            <th colspan="5"></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
}

<!-- SCRIPTS -->
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.5.2/js/dataTables.buttons.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.bootstrap4.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.html5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.print.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.2.3/js/responsive.bootstrap4.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        // ✅ VALIDATE NGÀY THÁNG
        $('#dfr, #dto').on('change', function () {
            var dfr = $('#dfr').val();
            var dto = $('#dto').val();

            if (dfr && dto) {
                var fromDate = new Date(dfr);
                var toDate = new Date(dto);

                if (fromDate > toDate) {
                    alert('⚠️ Ngày bắt đầu phải nhỏ hơn hoặc bằng ngày kết thúc!');
                    $('#dto').val('');
                }
            }
        });

        var table = $('#example').DataTable({
            dom: 'Bfrtip',
            buttons: [
                { extend: 'copyHtml5', footer: true, text: '<i class="fas fa-copy"></i> Copy' },
                {
                    extend: 'excelHtml5', footer: true, text: '<i class="fas fa-file-excel"></i> Excel',
                    title: 'Báo cáo doanh thu - Chỉ tính đơn đã giao'
                },
                { extend: 'csvHtml5', footer: true, text: '<i class="fas fa-file-csv"></i> CSV' },
                {
                    extend: 'pdfHtml5', footer: true, text: '<i class="fas fa-file-pdf"></i> PDF',
                    title: 'Báo cáo doanh thu - Chỉ tính đơn đã giao'
                },
                { extend: 'print', footer: true, text: '<i class="fas fa-print"></i> In' }
            ],
            language: {
                search: "Tìm kiếm:",
                lengthMenu: "Hiển thị _MENU_ dòng",
                info: "Hiển thị _START_ đến _END_ trong tổng _TOTAL_ dòng",
                paginate: {
                    first: "Đầu",
                    last: "Cuối",
                    next: "Sau",
                    previous: "Trước"
                },
                emptyTable: "Không có dữ liệu",
                zeroRecords: "Không tìm thấy kết quả phù hợp"
            },
            order: [[8, 'desc']], // Sắp xếp theo ngày mới nhất
            pageLength: 25
        });

        table.buttons().container().appendTo('#example_wrapper .col-md-6:eq(0)');
    });
</script>

