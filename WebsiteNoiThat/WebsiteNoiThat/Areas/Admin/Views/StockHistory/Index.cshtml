@model IEnumerable<Models.EF.StockHistory>

@{
    string warehouseName = ViewBag.WarehouseName ?? "Kho Hàng";
    string variantName = ViewBag.VariantName ?? "Sản phẩm";
    ViewBag.Title = "Lịch sử giao dịch: " + variantName;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Lịch sử giao dịch</h1>
        <a href="@Url.Action("Inventory", "Warehouse", new { warehouseId = Model.FirstOrDefault()?.WarehouseId })" class="btn btn-sm btn-outline-secondary shadow-sm">
            <i class="fas fa-arrow-left"></i> Trở về Tồn kho
        </a>
    </div>

    <div class="alert alert-info">
        <strong>Kho:</strong> @warehouseName | <strong>Sản phẩm/Biến thể:</strong> @variantName
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th width="10%">Ngày</th>
                            <th width="10%">Loại</th>
                            <th width="15%">Phiếu Tham Chiếu</th>
                            <th width="15%" class="text-center">Số lượng Thay đổi</th>
                            <th width="15%" class="text-center">Tồn trước</th>
                            <th width="15%" class="text-center">Tồn sau</th>
                            <th width="10%">Người Tạo</th>
                            <th width="10%">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CreatedAt.GetValueOrDefault().ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    @{
                                        string typeClass = item.Type == "IN" ? "badge-success" : (item.Type == "OUT" ? "badge-danger" : "badge-info");
                                    }
                                    <span class="badge @typeClass">@item.Type</span>
                                </td>
                                <td>@item.ReferenceType #@item.ReferenceId</td>
                                <td class="text-center font-weight-bold @(item.Type == "IN" ? "text-success" : "text-danger")">
                                    @if (item.Type == "IN")
                                    {
                                        <i class="fas fa-plus"></i>
                                    }
                                    else if (item.Type == "OUT")
                                    {
                                        <i class="fas fa-minus"></i>
                                    }
                                    @item.QuantityChange
                                </td>
                                <td class="text-center">@item.QuantityBefore</td>
                                <td class="text-center font-weight-bold">@item.QuantityAfter</td>
                                <td>@item.UserCreated?.Name</td>
                                <td class="text-center">
                                    @if (item.ReferenceId.HasValue)
                                    {
                                        <a href="@Url.Action("ViewReference", "StockHistory", new { type = item.ReferenceType, referenceId = item.ReferenceId.Value })" class="btn btn-sm btn-outline-info" title="Xem phiếu">
                                            <i class="fas fa-search"></i>
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>