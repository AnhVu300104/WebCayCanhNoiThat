        }

        #left .boxspl input[type="submit"] {
            margin-top: 15px;
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            transition: background-color 0.3s;
        }

            #left .boxspl input[type="submit"]:hover {
                background-color: #8B4513;
                border-color: #8B4513;
            }

        /* 🛠️ SỬA ĐỔI: CSS cho Khối Tin Tức */
        #left .boxleft:nth-child(3) .titboxl { /* Áp dụng cho khối Tin Tức cụ thể */
            justify-content: center; /* Căn giữa tiêu đề "TIN TỨC" */
        }

        /* Đảm bảo nội dung Tin Tức hiển thị đúng (Giả định bên trong @Html.Action("NewsHot", "News")) */
        #slider-tintuc .owl-item {
            text-align: center; /* Căn giữa nội dung slide */
        }
        #slider-tintuc img {
            max-width: 100%;
            height: auto;
            border-radius: 4px;
            margin: 0 auto 10px auto; /* Căn giữa ảnh */
            display: block;
        }
        #slider-tintuc .post-title {
            font-weight: 600;
            font-size: 14px;
            color: var(--primary-color);
            line-height: 1.4;
        }

        /* 6. Footer (Giữ lại CSS cũ cho các class dùng chung, nhưng style chính đã là inline) */
        #footer {
            /* Các thuộc tính này bị override bởi inline style */
            background-color: var(--text-dark);
            color: #ccc;
            padding: 40px 0;
            margin-top: 30px;
        }

            #footer h3 span {
