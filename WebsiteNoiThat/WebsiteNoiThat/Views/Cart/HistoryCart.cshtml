@model IEnumerable<Models.EF.Order>

@{
    ViewBag.Title = "Lịch sử đơn hàng";
    var db = new Models.EF.DBNoiThat();
}

<style>
    .history-container {
        max-width: 1200px;
        margin: 50px auto;
        padding: 0 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .page-header {
        background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
        color: white;
        padding: 40px 30px;
        border-radius: 16px;
        text-align: center;
        margin-bottom: 40px;
        box-shadow: 0 4px 20px rgba(139, 69, 19, 0.3);
    }

        .page-header h2 {
            margin: 0 0 10px 0;
            font-size: 2.2rem;
            font-weight: 700;
        }

        .page-header p {
            margin: 0;
            font-size: 1.1rem;
            opacity: 0.95;
        }

    .order-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        padding: 30px;
        margin-bottom: 25px;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

        .order-card:hover {
            box-shadow: 0 6px 24px rgba(0,0,0,0.12);
            transform: translateY(-3px);
            border-color: #8B4513;
        }

    .order-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-bottom: 20px;
        border-bottom: 3px solid #f0f0f0;
        margin-bottom: 20px;
    }

    .order-id {
        font-size: 1.4rem;
        font-weight: 700;
        color: #8B4513;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .order-status {
        padding: 10px 20px;
        border-radius: 25px;
        font-size: 0.95rem;
        font-weight: 600;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .status-1 {
        background: linear-gradient(135deg, #fff3cd, #ffeaa7);
        color: #856404;
    }

    .status-2 {
        background: linear-gradient(135deg, #cfe2ff, #a8d8ff);
        color: #084298;
    }

    .status-3 {
        background: linear-gradient(135deg, #d1e7dd, #95e1d3);
        color: #0f5132;
    }

    .status-4 {
        background: linear-gradient(135deg, #d1e7dd, #81c784);
        color: #0a3622;
    }

    .status-5 {
        background: linear-gradient(135deg, #f8d7da, #ffb3ba);
        color: #842029;
    }

    .order-body {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 20px;
    }

    .order-info-item {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 12px;
        border-left: 4px solid #8B4513;
    }

    .info-label {
        font-size: 0.85rem;
        color: #6c757d;
        margin-bottom: 8px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .info-value {
        font-size: 1rem;
        color: #2d3748;
        font-weight: 600;
        word-wrap: break-word;
    }

    .order-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 20px;
        border-top: 3px solid #f0f0f0;
    }

    .order-total {
        background: linear-gradient(135deg, #fff8f0, #ffe5cc);
        padding: 15px 25px;
        border-radius: 12px;
        border-left: 5px solid #8B4513;
    }

        .order-total .label {
            font-size: 0.9rem;
            color: #6c757d;
            margin-bottom: 5px;
        }

        .order-total .value {
            font-size: 1.6rem;
            font-weight: 800;
            color: #8B4513;
        }

    .order-actions {
        display: flex;
        gap: 12px;
    }

    .btn {
        padding: 12px 24px;
        border-radius: 10px;
        font-size: 1rem;
        font-weight: 600;
        text-align: center;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        border: none;
        cursor: pointer;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .btn-detail {
        background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
        color: white;
    }

        .btn-detail:hover {
            background: linear-gradient(135deg, #A0522D 0%, #8B4513 100%);
            color: white;
            text-decoration: none;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(139, 69, 19, 0.3);
        }

    .btn-cancel {
        background: white;
        color: #dc3545;
        border: 2px solid #dc3545;
    }

        .btn-cancel:hover {
            background: #dc3545;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
        }

    .empty-state {
        text-align: center;
        padding: 100px 20px;
        background: white;
        border-radius: 16px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.08);
    }

    .empty-icon {
        font-size: 5rem;
        margin-bottom: 25px;
        opacity: 0.3;
        animation: float 3s ease-in-out infinite;
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-20px);
        }
    }

    .empty-state h3 {
        font-size: 1.8rem;
        color: #6c757d;
        margin-bottom: 15px;
        font-weight: 700;
    }

    .empty-state p {
        color: #9ca3af;
        margin-bottom: 30px;
        font-size: 1.1rem;
    }

    .btn-primary {
        background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
        color: white;
        padding: 14px 35px;
        font-size: 1.1rem;
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 16px rgba(139, 69, 19, 0.4);
            color: white;
            text-decoration: none;
        }

    @@media (max-width: 768px) {
        .order-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 15px;
        }

        .order-footer {
            flex-direction: column;
            gap: 20px;
            align-items: stretch;
        }

        .order-actions {
            width: 100%;
            flex-direction: column;
        }

        .btn {
            width: 100%;
            justify-content: center;
        }

        .order-body {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="history-container">
    <div class="page-header">
        <h2>📋 Lịch sử đơn hàng</h2>
        <p>Quản lý và theo dõi các đơn hàng của bạn</p>
    </div>

    @if (Model != null && Model.Any())
    {
        foreach (var order in Model)
        {
            var statusText = "";
            var statusClass = "";
            var statusIcon = "";

            switch (order.StatusId)
            {
                case 1:
                    statusText = "Đã tiếp nhận";
                    statusClass = "status-1";
                    statusIcon = "⏳";
                    break;
                case 2:
                    statusText = "Đang xử lý";
                    statusClass = "status-2";
                    statusIcon = "⚙️";
                    break;
                case 3:
                    statusText = "Đang giao hàng";
                    statusClass = "status-3";
                    statusIcon = "🚚";
                    break;
                case 4:
                    statusText = "Đã giao hàng";
                    statusClass = "status-4";
                    statusIcon = "✅";
                    break;
                case 5:
                    statusText = "Đã hủy";
                    statusClass = "status-5";
                    statusIcon = "❌";
                    break;
                default:
                    statusText = "Không xác định";
                    statusClass = "status-1";
                    statusIcon = "❓";
                    break;
            }

            var orderTotal = db.OrderDetails
                .Where(od => od.OrderId == order.OrderId)
                .Sum(od => (decimal?)(od.Price * od.Quantity)) ?? 0;

            <div class="order-card">
                <div class="order-header">
                    <div class="order-id">
                        <span>📦</span>
                        <span>Đơn hàng #@order.OrderId</span>
                    </div>
                    <span class="order-status @statusClass">
                        @statusIcon @statusText
                    </span>
                </div>

                <div class="order-body">
                    <div class="order-info-item">
                        <div class="info-label">📅 Ngày đặt hàng</div>
                        <div class="info-value">@(order.CreatedDate?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</div>
                    </div>
                    <div class="order-info-item">
                        <div class="info-label">👤 Người nhận</div>
                        <div class="info-value">@order.ShipName</div>
                    </div>
                    <div class="order-info-item">
                        <div class="info-label">📞 Số điện thoại</div>
                        <div class="info-value">@order.ShipPhone</div>
                    </div>
                    <div class="order-info-item">
                        <div class="info-label">📍 Địa chỉ giao hàng</div>
                        <div class="info-value">@order.ShipAddress</div>
                    </div>
                </div>

                <div class="order-footer">
                    <div class="order-total">
                        <div class="label">Tổng thanh toán:</div>
                        <div class="value">@string.Format("{0:N0}", orderTotal)₫</div>
                    </div>
                    <div class="order-actions">
                        <a href="@Url.Action("OrderDetail", new { id = order.OrderId })" class="btn btn-detail">
                            <span>👁️</span>
                            <span>Xem chi tiết</span>
                        </a>
                        @if (order.StatusId == 1)
                        {
                            <button onclick="cancelOrder(@order.OrderId)" class="btn btn-cancel">
                                <span>❌</span>
                                <span>Hủy đơn</span>
                            </button>
                        }
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon">📦</div>
            <h3>Chưa có đơn hàng nào</h3>
            <p>Bạn chưa đặt hàng lần nào. Hãy khám phá các sản phẩm tuyệt vời của chúng tôi!</p>
            <a href="@Url.Action("ShowProduct", "Product")" class="btn btn-primary">
                <span>🛒</span>
                <span>Mua sắm ngay</span>
            </a>
        </div>
    }
</div>

@* ✅ THAY THẾ SECTION Scripts CŨ BẰNG CODE NÀY: *@

@section Scripts {
    <script>
        function cancelOrder(orderId) {
            if (!confirm('Bạn có chắc chắn muốn hủy đơn hàng #' + orderId + '?\n\nSố lượng sản phẩm sẽ được hoàn lại vào kho.')) {
                return;
            }

            const button = event.target.closest('button');
            const originalText = button.innerHTML;
            button.innerHTML = '<span>⏳</span><span>Đang xử lý...</span>';
            button.disabled = true;

            $.ajax({
                url: '@Url.Action("CancelOrder", "Cart")',
                type: 'POST',
                data: { id: orderId },
                success: function(response) {
                    if (response.success) {
                        alert('✅ ' + response.message);
                        location.reload();
                    } else {
                        alert('❌ ' + response.message);
                        button.innerHTML = originalText;
                        button.disabled = false;
                    }
                },
                error: function(xhr, status, error) {
                    console.error('❌ Error:', error);
                    alert('❌ Có lỗi xảy ra. Vui lòng thử lại!');
                    button.innerHTML = originalText;
                    button.disabled = false;
                }
            });
        }

        console.log('✅ Page loaded. Total orders:', @(Model?.Count() ?? 0));
    </script>
}