@model WebsiteNoiThat.Models.OrderSuccessViewModel

@{
    ViewBag.Title = "Chi tiết đơn hàng #" + Model.Order.OrderId;
}

<style>
    .detail-container {
        max-width: 900px;
        margin: 50px auto;
        padding: 0 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: #8B4513;
        text-decoration: none;
        font-weight: 600;
        margin-bottom: 20px;
        transition: all 0.3s;
    }

    .back-link:hover {
        color: #A0522D;
        transform: translateX(-5px);
    }

    .detail-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    .detail-header {
        background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
        color: white;
        padding: 30px;
    }

    .detail-header h2 {
        margin: 0 0 10px 0;
        font-size: 1.8rem;
        font-weight: 700;
    }

    .detail-header .status {
        display: inline-block;
        padding: 6px 16px;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 600;
        background: rgba(255,255,255,0.2);
    }

    .order-info {
        padding: 30px;
        border-bottom: 2px dashed #e9ecef;
    }

    .info-row {
        display: flex;
        justify-content: space-between;
        padding: 12px 0;
        font-size: 1rem;
    }

    .info-label {
        color: #6c757d;
        font-weight: 500;
    }

    .info-value {
        color: #2d3748;
        font-weight: 600;
        text-align: right;
    }

    .order-details {
        padding: 30px;
    }

    .section-title {
        font-size: 1.3rem;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 3px solid #8B4513;
    }

    .product-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px;
        background: #f8f9fa;
        border-radius: 8px;
        margin-bottom: 12px;
    }

    .product-info {
        flex: 1;
    }

    .product-name {
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 5px;
    }

    .product-variant {
        font-size: 0.9rem;
        color: #6c757d;
    }

    .product-quantity {
        font-size: 0.9rem;
        color: #6c757d;
        margin-top: 3px;
    }

    .product-price {
        text-align: right;
        margin-left: 15px;
    }

    .product-unit-price {
        font-size: 0.9rem;
        color: #6c757d;
    }

    .product-total-price {
        font-size: 1.1rem;
        font-weight: 700;
        color: #8B4513;
    }

    .order-total {
        background: linear-gradient(135deg, #fdf8f3 0%, #f5ebe0 100%);
        padding: 20px 30px;
        border-radius: 8px;
        margin-top: 20px;
    }

    .total-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .total-label {
        font-size: 1.3rem;
        font-weight: 700;
        color: #2d3748;
    }

    .total-value {
        font-size: 1.8rem;
        font-weight: 800;
        color: #8B4513;
    }

    .action-buttons {
        padding: 30px;
        display: flex;
        gap: 15px;
    }

    .btn {
        flex: 1;
        padding: 14px 25px;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        text-align: center;
        text-decoration: none;
        transition: all 0.3s;
        display: inline-block;
        border: none;
        cursor: pointer;
    }

    .btn-secondary {
        background: white;
        color: #8B4513;
        border: 2px solid #8B4513;
    }

    .btn-secondary:hover {
        background: #8B4513;
        color: white;
        transform: translateY(-2px);
        text-decoration: none;
    }

    .btn-danger {
        background: white;
        color: #dc3545;
        border: 2px solid #dc3545;
    }

    .btn-danger:hover {
        background: #dc3545;
        color: white;
        transform: translateY(-2px);
    }

    @@media (max-width: 768px) {
        .action-buttons {
            flex-direction: column;
        }

        .info-row {
            flex-direction: column;
            gap: 5px;
        }

        .info-value {
            text-align: left;
        }
    }
</style>

<div class="detail-container">
    <a href="@Url.Action("HistoryCart", "Cart")" class="back-link">
        ← Quay lại danh sách đơn hàng
    </a>

    <div class="detail-card">
        <!-- Header -->
        <div class="detail-header">
            <h2>Đơn hàng #@Model.Order.OrderId</h2>
            <span class="status">
                @{
                    var statusText = "";
                    switch (Model.Order.StatusId)
                    {
                        case 1: statusText = "Chờ xử lý"; break;
                        case 2: statusText = "Đang giao"; break;
                        case 3: statusText = "Hoàn thành"; break;
                        case 4:
                        case 5: statusText = "Đã huỷ"; break;
                        default: statusText = "Không xác định"; break;
                    }
                }
                @statusText
            </span>
        </div>

        <!-- Thông tin đơn hàng -->
        <div class="order-info">
            <div class="info-row">
                <span class="info-label">📅 Ngày đặt:</span>
                <span class="info-value">@Model.Order.CreatedDate</span>
            </div>
            <div class="info-row">
                <span class="info-label">👤 Người nhận:</span>
                <span class="info-value">@Model.Order.ShipName</span>
            </div>
            <div class="info-row">
                <span class="info-label">📞 Số điện thoại:</span>
                <span class="info-value">@Model.Order.ShipPhone</span>
            </div>
            <div class="info-row">
                <span class="info-label">📧 Email:</span>
                <span class="info-value">@Model.Order.ShipEmail</span>
            </div>
            <div class="info-row">
                <span class="info-label">📍 Địa chỉ giao hàng:</span>
                <span class="info-value">@Model.Order.ShipAddress</span>
            </div>
        </div>

        <!-- Chi tiết sản phẩm -->
        <div class="order-details">
            <h3 class="section-title">📦 Chi tiết sản phẩm</h3>

            @if (Model.OrderDetails != null && Model.OrderDetails.Count > 0)
            {
                foreach (var item in Model.OrderDetails)
                {
                    <div class="product-item">
                        <div class="product-info">
                            <div class="product-name">@item.ProductName</div>
                            @if (!string.IsNullOrEmpty(item.VariantInfo) && item.VariantInfo != "Mặc định")
                            {
                                <div class="product-variant">🏷️ @item.VariantInfo</div>
                            }
                            <div class="product-quantity">Số lượng: <strong>@item.Quantity</strong></div>
                        </div>
                        <div class="product-price">
                            <div class="product-unit-price">@string.Format("{0:N0}", item.Price)₫</div>
                            <div class="product-total-price">@string.Format("{0:N0}", item.Total)₫</div>
                        </div>
                    </div>
                }

                <div class="order-total">
                    <div class="total-row">
                        <span class="total-label">💰 Tổng thanh toán:</span>
                        <span class="total-value">@string.Format("{0:N0}", Model.Total)₫</span>
                    </div>
                </div>
            }
        </div>

        <!-- Buttons -->
        <div class="action-buttons">
            <a href="@Url.Action("HistoryCart", "Cart")" class="btn btn-secondary">
                📋 Danh sách đơn hàng
            </a>
            @if (Model.Order.StatusId == 1)
            {
                <button onclick="cancelOrder(@Model.Order.OrderId)" class="btn btn-danger">
                    ❌ Huỷ đơn hàng
                </button>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function cancelOrder(orderId) {
            if (!confirm('Bạn có chắc chắn muốn huỷ đơn hàng này?')) {
                return;
            }

            $.ajax({
                url: '@Url.Action("CancelOrder", "Cart")',
                type: 'POST',
                data: { id: orderId },
                success: function(response) {
                    if (response.success) {
                        alert(response.message);
                        window.location.href = '@Url.Action("HistoryCart", "Cart")';
                    } else {
                        alert(response.message);
                    }
                },
                error: function() {
                    alert('Có lỗi xảy ra. Vui lòng thử lại!');
                }
            });
        }
    </script>
}